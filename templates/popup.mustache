{{!
    @template local_teacherassistant/popup

    Teacher Assistant popup template.

    Context variables required for this template:
    * courseid - The course ID

    Example context (json):
    {
        "courseid": 2
    }
}}

<div id="teacherassistant-popup" class="teacherassistant-minimized" data-courseid="{{courseid}}">
    <div id="teacherassistant-toggle-btn" class="teacherassistant-toggle">
        <i class="fa fa-graduation-cap"></i>
    </div>
    <div id="teacherassistant-content" class="teacherassistant-content">
        <div class="teacherassistant-header">
            <h3>Teacher Assistant</h3>
            <div class="teacherassistant-actions">
                <button id="teacherassistant-expand-btn" class="teacherassistant-btn" title="{{#str}}expand, local_teacherassistant{{/str}}">
                    <i class="fa fa-expand"></i>
                </button>
                <button id="teacherassistant-minimize-btn" class="teacherassistant-btn" title="{{#str}}minimize, local_teacherassistant{{/str}}">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="teacherassistant-body">
            <div id="teacherassistant-messages" class="teacherassistant-messages"></div>
            <div class="teacherassistant-input-container">
                <textarea id="teacherassistant-input"
                          class="teacherassistant-input"
                          placeholder="{{#str}}askquestion, local_teacherassistant{{/str}}"
                          rows="3"></textarea>
                <button id="teacherassistant-send-btn" class="teacherassistant-send-btn">
                    <i class="fa fa-paper-plane"></i> {{#str}}send, local_teacherassistant{{/str}}
                </button>
            </div>
        </div>
    </div>
</div>
