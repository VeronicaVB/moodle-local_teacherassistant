{{!
    @template local_teacherassistant/chat_fullpage

    Teacher Assistant full page chat template.

    Context variables required for this template:
    * courseid - The course ID

    Example context (json):
    {
        "courseid": 2
    }
}}

<div class="teacherassistant-fullpage-container" data-courseid="{{courseid}}">
    <div class="teacherassistant-fullpage-messages-wrapper">
        <div id="teacherassistant-fullpage-messages" class="teacherassistant-fullpage-messages"></div>
    </div>
    <div class="teacherassistant-fullpage-input-wrapper">
        <textarea id="teacherassistant-fullpage-input"
                  class="teacherassistant-fullpage-input"
                  placeholder="{{#str}}askquestion, local_teacherassistant{{/str}}"
                  rows="3"></textarea>
        <button id="teacherassistant-fullpage-send-btn" class="teacherassistant-fullpage-send-btn">
            <i class="fa fa-paper-plane"></i> {{#str}}send, local_teacherassistant{{/str}}
        </button>
    </div>
</div>
